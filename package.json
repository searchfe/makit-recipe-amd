{
  "name": "makit-recipe-amd",
  "version": "1.1.0",
  "description": "makit-recipe-amd",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "test": "jest --no-cache",
    "coveralls": "jest --no-cache --coverage && cat ./coverage/lcov.info | coveralls",
    "build": "tsc",
    "watch": "tsc --watch",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/searchfe/makit-recipe-amd.git"
  },
  "keywords": [
    "makit"
  ],
  "author": "searchfe@baidu.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/searchfe/makit-recipe-amd/issues"
  },
  "homepage": "https://github.com/searchfe/makit-recipe-amd#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.10",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/esprima": "^4.0.2",
    "@types/fs-extra": "^9.0.7",
    "@types/gulp-util": "^3.0.35",
    "@types/jest": "^26.0.20",
    "@types/md5-file": "^4.0.2",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "commitizen": "^3.1.1",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "gulp-util": "^3.0.8",
    "jest": "^26.6.3",
    "makit-plugin": "^1.10.2",
    "semantic-release": "^17.3.9",
    "ts-jest": "^26.5.1"
  },
  "release": {
    "branch": "master",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "files": [
    "dist",
    "*.json",
    "*.md"
  ],
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
